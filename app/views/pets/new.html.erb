<div class="container">
  <h1>Add your pet to our website</h1>
  <hr>
  <%= simple_form_for(@pet) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.input :species, collection: Pet::SPECIES %>
    <%= f.input :environment, collection: Pet::ENVIRONMENT, input_html: { multiple: true } %>
    <%= f.input :age %>
    <%= f.input :price, label: "Price per day" %>
    <%= f.input :address %>
    <%= f.submit %>
  <% end %>
</div>
